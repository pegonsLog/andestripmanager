{
    "$schema": "./node_modules/@angular/service-worker/config/schema.json",
    "index": "/index.html",
    "assetGroups": [
        {
            "name": "app",
            "installMode": "prefetch",
            "updateMode": "prefetch",
            "resources": {
                "files": [
                    "/favicon.ico",
                    "/index.html",
                    "/manifest.json",
                    "/*.css",
                    "/*.js"
                ]
            }
        },
        {
            "name": "assets",
            "installMode": "lazy",
            "updateMode": "prefetch",
            "resources": {
                "files": [
                    "/assets/**",
                    "/*.(eot|svg|cur|jpg|png|webp|gif|otf|ttf|woff|woff2|ani)"
                ]
            }
        },
        {
            "name": "fonts",
            "installMode": "lazy",
            "updateMode": "prefetch",
            "resources": {
                "urls": [
                    "https://fonts.googleapis.com/**",
                    "https://fonts.gstatic.com/**"
                ]
            }
        }
    ],
    "dataGroups": [
        {
            "name": "firebase-firestore",
            "urls": [
                "https://firestore.googleapis.com/**"
            ],
            "cacheConfig": {
                "strategy": "performance",
                "maxSize": 200,
                "maxAge": "1d",
                "timeout": "10s"
            }
        },
        {
            "name": "firebase-auth",
            "urls": [
                "https://identitytoolkit.googleapis.com/**",
                "https://securetoken.googleapis.com/**"
            ],
            "cacheConfig": {
                "strategy": "freshness",
                "maxSize": 50,
                "maxAge": "30m",
                "timeout": "5s"
            }
        },
        {
            "name": "firebase-storage",
            "urls": [
                "https://firebasestorage.googleapis.com/**"
            ],
            "cacheConfig": {
                "strategy": "performance",
                "maxSize": 100,
                "maxAge": "7d"
            }
        },
        {
            "name": "weather-api",
            "urls": [
                "https://api.openweathermap.org/**",
                "https://api.weatherapi.com/**"
            ],
            "cacheConfig": {
                "strategy": "freshness",
                "maxSize": 50,
                "maxAge": "1h",
                "timeout": "8s"
            }
        },
        {
            "name": "maps-api",
            "urls": [
                "https://maps.googleapis.com/**",
                "https://maps.gstatic.com/**"
            ],
            "cacheConfig": {
                "strategy": "performance",
                "maxSize": 150,
                "maxAge": "7d"
            }
        },
        {
            "name": "critical-data",
            "urls": [
                "https://firestore.googleapis.com/v1/projects/*/databases/(default)/documents/viagens/**",
                "https://firestore.googleapis.com/v1/projects/*/databases/(default)/documents/usuarios/**"
            ],
            "cacheConfig": {
                "strategy": "performance",
                "maxSize": 300,
                "maxAge": "3d"
            }
        }
    ],
    "navigationUrls": [
        "/**",
        "!/**/*.*",
        "!/**/*__*",
        "!/**/*__*/**"
    ]
}